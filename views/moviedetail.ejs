<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head>
    <% include ./partial/head %>
    <% include ./partial/theme-changer %>
    <% include ./partial/header %>
  </head>
  <body>

<main>
    <div class="container">
  <br><br>
  <h2 class="text-center">Title: <%= movie.title %></h2><br><br>
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <img src="<%= movie.poster %>" alt="" class="img-fluid">
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <h5>CinemaId: <%= movie.cinemaId %></h5>
        <h5>Category: <%= movie.category %></h5>
        <h5>Cast: <%= movie.cast %></h5>
        <h5>Director: <%= movie.director %></h5>
        <h5>Duration: <%= movie.duration %></h5>
        <h5>Start Date: <%= movie.startDate.toISOString().slice(0,10) %></h5>
        <h5>End Date: <%= movie.endDate.toISOString().slice(0,10) %></h5>
        <h5>Release Date: <%= movie.releaseDate.toISOString().slice(0,10) %></h5>
        <h5>Synopsis: <%= movie.syn %></h5>
        <div class="embed-responsive embed-responsive-4by3">
            <iframe src="<%= movie.trailer %>" class="embed-responsive-item" allowfullscreen></iframe>
        </div>
    </div>
  </div>
  <h4 class="text-center mt-3">Show Time</h4>
  <div class="row mt-3">
    <% for(var i = 0; i < timetable.length; i++){%>
    <h5 class="mt-3 ms-5"><%= timetable[i].date %></h5>
  </div>
  <div class="row">
    <% for(var j = 0; j < timetable[i].time.length; j++){%>
    <div class="col-lg-2 col-md-3 col-sm-4">
        <div class="card">
            <div class="card-body">
                <p class="card-title">
                    NO : <%= timetable[i].screenNo %>
                </p>
                <p class="cart-text">Time : <%= timetable[i].time[j].time %></p>
            </div>
        </div>
    </div>
    <%}%>
  </div>
  <%}%>
</div>
</main>
<script src="/assets/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>

